{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run current file",
            "type": "shell",
            "command": "g++",
            "args": [
                "\"${file}\"",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
                "&&",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile and run the currently open C++ file"
        }
    ]
}